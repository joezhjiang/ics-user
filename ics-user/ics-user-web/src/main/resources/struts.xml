<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<!-- 默认的视图主题 -->
	<constant name="struts.ui.theme" value="simple" />
	<!-- action spring 管理 -->
	<constant name="struts.objectFactory" value="spring" />
	<!-- <include file="user/struts.user.xml"></include> -->
	<package name="user" extends="struts-default">
		<action name="*User" class="userManagerAction" method="{1}">
			<result name="user.add.sucess" type="redirectAction">listUser</result>
			<result name="user.list" type="dispatcher">/WEB-INF/pages/user/list.jsp</result>
			<result name="user.detail" type="dispatcher">/WEB-INF/pages/user/detail.jsp</result>
		</action>
	</package>
</struts>